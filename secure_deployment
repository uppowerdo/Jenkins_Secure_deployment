pipeline {
    agent any  
   
    stages {
        stage('Build') {        
            steps {
                echo '使用 Maven 编译代码'
            }
        }
        stage('Unit and Integration Tests') {
           
            steps {
                echo 'running JUnit test'
                echo '运行 Selenium Integration Tests'
                
            }
            post {
                 success {   
                         mail to: "kimirise@gmail.com", 
                         subject: "Unit and integration test status Email", 
                         body: "Unit and integration test was successfull"
                         }
                 failure {
                         mail to: "kimirise@gmail.com", 
                         subject: "Unit and integration test status Email", 
                         body: "Unit and integration test failed"
                         }
            }
        }      
        stage('Security Scan') {
            // 使用 SAST 工具扫描漏洞 (替换为适合您的安全扫描工具)
            steps {
                echo '准备进行安全扫描...'
                echo '配置安全扫描工具...'
                echo '设置安全扫描范围...'
                echo '开始模拟安全扫描...'
                echo '正在扫描文件1...'
                echo '正在扫描文件2...'
                echo '正在扫描文件3...'
                echo '安全扫描完成！'
            }
            post {
                 success {
                     emailtext (
                         attchLog: true,
                         to: "kimirise@gmail.com", 
                         subject: "Unit and integration test status Email", 
                         body: "Unit and integration test was successfull"
                         )
                         }
                 failure {
                     emailtext (
                         attchLog: true,
                         to: "kimirise@gmail.com", 
                         subject: "Unit and integration test status Email", 
                         body: "Unit and integration test failed"
                         )
                         }
            }
        }
    }
}
